#!/usr/bin/env bash

set -e

current=$(pwd)

function backend() {
  echo "Updating backend..."

  cd backend-app/terraform

  terraform apply -auto-approve

  cd ../chef/cookbooks/backend_app

  berks install
  berks upload

  knife ssh 'name:backend-app' 'sudo chef-client' --ssh-user ubuntu --identity-file ../../../../.keys/id_rsa_admin --attribute cloud.public_hostname

  cd $current
}

function frontend() {
  echo "Updating frontend..."

  cd frontend-app

  yarn run --silent build
  yarn run --silent generate-s3-metadata > terraform/build_files.tf.json

  cd terraform

  terraform apply -auto-approve

  cd $current
}

backend && frontend

pwd

git add backend-app/terraform/terraform.tfstate*
git add frontend-app/terraform/terraform.tfstate*

git commit -m "Deploy: Update terraform state files"
